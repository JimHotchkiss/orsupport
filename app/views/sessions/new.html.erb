
<div id="page_wrapper">
		<% if flash[:error] %>
	    <div class="notice"><h4 style="color:red"><%= flash[:error] %></h4></div>
	  <% end %>
	<h2>Login</h2>
    <%= form_tag(sessions_path) do %>
    <div>
			<%= label_tag :email %><br>
      <%= text_field_tag :email, nil, placeholder: "Your Email Here" %>
    </div><br>
		<div>
			<%= label_tag :password %><br>
      <%= password_field_tag :password, nil, placeholder: "Your Password Here" %>
    </div><br>
    <div>
      <%= submit_tag "login" %>
    </div>
    <% end %>
</div>
