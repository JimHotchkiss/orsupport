<h2>Issues New Page</h2>

<%= form_for :issue, url: issues_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description%>
  </p>

  <p>
    <%= f.label :solution %><br>
    <%= f.text_area :solution %>
  </p>

  <p>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
